<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer gradient acts as the stroke -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#007599"
                android:endColor="#00C3FF"
                android:type="linear" />
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <!-- Inner transparent layer creates the hollow center -->
    <item android:left="3dp" android:top="3dp"
        android:right="3dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
            <corners android:radius="17dp"/>
        </shape>
    </item>
</layer-list>
