<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!-- Scroll container so the page scrolls if content grows -->
    <ScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ===== Header ===== -->
            <RelativeLayout
                android:id="@+id/headerSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:color="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bottom"
                    android:orientation="vertical"
                    android:paddingHorizontal="24dp"
                    android:paddingTop="60dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/tvGreeting"
                        style="@style/AppText"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:text="Hi, Mate"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWelcome"
                        style="@style/AppText"
                        android:layout_width="319dp"
                        android:layout_height="wrap_content"
                        android:text="Welcome to Study Mate Dashboard."
                        android:textSize="15sp" />

                    <!-- ===== Search Bar ===== -->

                    <LinearLayout
                        android:id="@+id/searchBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/bg_search"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/ivSearchIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/bg_search"
                            app:tint="#FFFFFF" />

                        <EditText
                            android:id="@+id/etSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@null"
                            android:hint="Search here..."
                            android:textColor="#FFFFFF"
                            android:textColorHint="#AAFFFFFF"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <!-- ===== Category Chips ===== -->
                    <LinearLayout
                        android:id="@+id/categoryRow"
                        android:layout_width="wrap_content"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/chipAll"
                            style="@style/AppText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chip"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="6dp"
                            android:text="All"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/chipScience"
                            style="@style/AppText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_chip"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="Science"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/chipMathematics"
                            style="@style/AppText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_chip"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="Mathematics"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/chipPhysics"
                            style="@style/AppText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_chip"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="Physics"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <!-- Add more chips if needed -->
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- ===== Lessons Container ===== -->
            <LinearLayout
                android:id="@+id/lessonsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Example Lesson Card -->
                <include layout="@layout/item_lesson_card" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lessonsContainer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Example Lesson Card -->
                <include layout="@layout/item_lesson_card" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lessonsContainer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <!-- Example Lesson Card -->
                <include layout="@layout/item_lesson_card" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- ===== Bottom Navigation Bar ===== -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_welcome_gradient"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</RelativeLayout>
