<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#008EB9"
    tools:context=".TeacherProfileActivity">

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_welcome_gradient"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Background card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/TopCornersRounded">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- Profile Image -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/teacher"
                app:civ_border_color="#008EB9"
                app:civ_border_width="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Teacher Name -->
            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alian Jerom | Maths"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="@font/kulim_park_bold"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/profile_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Teacher Role -->
            <TextView
                android:id="@+id/teacher_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="School Teacher"
                android:fontFamily="@font/kulim_park_bold"
                android:textColor="#a4a0a0"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/teacher_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <!-- Videos Info -->
            <TextView
                android:id="@+id/all_videos_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Videos"
                android:textColor="#272626"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/kulim_park_bold"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/teacher_role"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/videos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="115 Videos"
                android:textColor="#8f8f8f"
                android:textSize="13sp"
                android:fontFamily="@font/kulim_park_bold"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@id/all_videos_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- Upload Button -->
            <Button
                android:id="@+id/upload_video_button"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:text="UPLOAD A NEW VIDEO"
                app:cornerRadius="15dp"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/kulim_park_semibold"
                android:backgroundTint="#00C4FF"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/videos_count"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />


            <!-- Vertical ScrollView for Videos -->

            <ScrollView
                android:id="@+id/videos_scroll"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:scrollbars="vertical"
                app:layout_constraintTop_toBottomOf="@id/upload_video_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Empty container; items will be added dynamically -->
                <LinearLayout
                    android:id="@+id/videos_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"/>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <!-- Back Icon -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/profile"
        android:src="@drawable/arrow_left"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/profile_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <!-- Notification Image -->
    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:contentDescription="Notification"
        android:src="@drawable/ic_notifications_black_24dp"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/profile_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

</androidx.constraintlayout.widget.ConstraintLayout>
