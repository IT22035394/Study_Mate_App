<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_profile_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_welcome_gradient"
    tools:context=".TeacherProfileActivity">

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_welcome_gradient"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Background card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="140dp"
        app:cardElevation="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:shapeAppearanceOverlay="@style/TopCornersRounded">

        <!-- Scrollable content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Screen title -->
                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADD A NEW VIDEO"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/kulim_park_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- Video Name label -->
                <TextView
                    android:id="@+id/videoNameLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Name"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/kulim_park_bold"
                    app:layout_constraintTop_toBottomOf="@id/Title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"/>

                <!-- Video Name FrameLayout -->
                <FrameLayout
                    android:id="@+id/videoNameLayout"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_input_field"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@id/videoNameLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="4dp"/>

                <!-- Video Description label -->
                <TextView
                    android:id="@+id/videoDescriptionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Description"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/kulim_park_bold"
                    app:layout_constraintTop_toBottomOf="@id/videoNameLayout"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"/>

                <!-- Video Description FrameLayout -->
                <FrameLayout
                    android:id="@+id/videoDescription"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:background="@drawable/bg_input_field"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@id/videoDescriptionLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="4dp"/>

                <!-- Upload Video label -->
                <TextView
                    android:id="@+id/tvUploadLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Video"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/kulim_park_bold"
                    app:layout_constraintTop_toBottomOf="@id/videoDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="24dp"/>

                <!-- Upload Video area -->
                <FrameLayout
                    android:id="@+id/flUploadArea"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_input_field"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintTop_toBottomOf="@id/tvUploadLabel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Click to Upload"
                        android:textColor="#7EE1FF"/>
                </FrameLayout>

                <!-- Action buttons -->
                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:text="Upload Video"
                    android:backgroundTint="#00C4FF"
                    android:textColor="@android:color/white"
                    app:cornerRadius="15dp"
                    app:layout_constraintTop_toBottomOf="@id/flUploadArea"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="16dp"/>

                <Button
                    android:id="@+id/btnDiscard"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:text="Discard Video"
                    android:backgroundTint="#00C4FF"
                    android:textColor="@android:color/white"
                    app:cornerRadius="15dp"
                    app:layout_constraintTop_toBottomOf="@id/btnUpload"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="12dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </com.google.android.material.card.MaterialCardView>

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/profile"
        android:src="@drawable/arrow_left"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/profile_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16" />

    <!-- Notification Image -->
    <ImageView
        android:id="@+id/ivNotification"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:contentDescription="Notification"
        android:src="@drawable/ic_notifications_black_24dp"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/profile_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toEndOf="@+id/ivProfile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.153" />

</androidx.constraintlayout.widget.ConstraintLayout>
