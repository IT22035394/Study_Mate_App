<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:paddingBottom="20dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/bg_input_field">

    <!-- Video preview -->
    <VideoView
        android:id="@+id/videoThumb"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/ic_video_placeholder"
        android:focusable="false"
        android:clickable="false" />

    <!-- Title + Description -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/videoTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video Title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/videoDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video description here..."
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <ImageButton
        android:id="@+id/btnEditVideo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Edit Video"
        android:src="@drawable/edit_24px"
        app:tint="@android:color/black"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/btnDeleteVideo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Delete Video"
        android:src="@drawable/ic_delete"
        app:tint="@android:color/black" />

</LinearLayout>
